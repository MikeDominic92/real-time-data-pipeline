# GCP Project Settings
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Service Account
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Pub/Sub Settings
PUBSUB_TOPIC_ID=raw-data-topic
PUBSUB_SUBSCRIPTION_ID=data-processing-sub

# BigQuery Settings
BIGQUERY_DATASET_ID=real_time_data
BIGQUERY_TABLE_ID=processed_events

# Pipeline Settings
PIPELINE_BATCH_SIZE=100
PIPELINE_STREAMING=true
PIPELINE_NUM_WORKERS=4

# Monitoring Settings
ENABLE_MONITORING=true
STACKDRIVER_LOGGING=true
ERROR_REPORTING=true

# Development Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true
